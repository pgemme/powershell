Write-host ""
[string]$DomainName = Read-host "What is the Domain Name (e.g. domain.com)"
write-host ""

$split = $DomainName.Split(".")
$dclower = $split[0]
$dchigher = $split[1]
$domain = "DC=$dclower,DC=$dchigher"

$DataCenternumber = Read-Host "How many different locations/Data Centers are there?"
$i = 1
while ($i -le $DataCenternumber) {
  [string]$DCname = Read-Host "Name of location $i"
	$OU = "OU=$DCname"
	New-ADOrganizationalUnit -Name $DCname -Path "$domain"
	New-ADOrganizationalUnit -Name Servers -Path "$OU,$domain"
	New-ADOrganizationalUnit -Name "Service Accounts" -Path "$OU,$domain"
	New-ADOrganizationalUnit -Name Groups -Path "$OU,$domain"
	New-ADOrganizationalUnit -Name Cluster -Path "$OU,$domain"
	$i++
	}
